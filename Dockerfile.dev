# Development Dockerfile for Angular with Hot Reload
FROM node:22-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./

# Configure proxy settings if provided
ARG HTTP_PROXY
ARG HTTPS_PROXY
ENV http_proxy=${HTTP_PROXY}
ENV https_proxy=${HTTPS_PROXY}

# Copy .npmrc for package registry configuration
COPY .npmrc ./

# Install dependencies
RUN npm install

# Copy Angular configuration files
COPY angular.json ./
COPY tsconfig.json ./
COPY tsconfig.app.json ./

# Copy source code (this will be overridden by volume mount)
COPY src ./src

# Expose development server port
EXPOSE 4200

# Enable polling for file watching in Docker environment
ENV CHOKIDAR_USEPOLLING=true

# Start development server with live reload
CMD ["npm", "run", "start", "--", "--host", "0.0.0.0", "--port", "4200", "--poll", "2000"]
